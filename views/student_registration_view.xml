<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- tree view          -->
    <record id="um_student_registration_tree_view_record_id" model="ir.ui.view">
        <field name="name">student.registration.tree</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <tree> 
                <field name="name"/>      
                <field name="student_id"/>      
                <field name="registration_id"/>      
                <field name="age"/>      
                <field name="gender"/>
                <field name="total_salary"/>    
                <field name="ssc_result"/>      
                <field name="hsc_result"/>      
                <field name="course_cost"/>      
                <field name="total_cost"/>      
                <field name="contact_number"/>      
                <field name="email"/>        
            </tree>
        </field>
    </record>   



    <!-- kanban view  -->
    <record id="um_student_registration_kanban_view" model="ir.ui.view">
        <field name="name">student.registration.kanban</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <kanban>

                <field name="name"/>
                <field name="student_id"/>
                <field name="accepted_faculty"/>
                <field name="accepted_department"/>
                <field name="total_cost"/>
                <field name="image"/>

                <templates>

                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_record_has_image_fill  ">
                            
                            <!-- <div class="oe_kanban_image"> -->
                            <field name="image" class="o_kanban_image_fill_left d-block oe_kanban_avatar" preview_image="image" widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>
                        <!-- </div> -->
                        
                        <div class="card d-flex flex-column justify-content-center" style="">
                            

                            <div class="card-header" style="margin:0; padding-left:1; padding-right:1; padding-top:0; padding-bottom:0;">
                                <h5 class="card-title" style="margin-bottom:0; padding:0; color: #009688; "><field name="name"/></h5>
                                <p class="card-text" style="margin-bottom:0; padding:0; color: #728C00;"><strong>ID:</strong> <field name="student_id"/></p>
                            </div>
                            
                            <!-- <div class="card d-flex flex-row justify-content-center" style="margin-bottom:0; padding-bottom:0">
                                <div class="card-body ">
                                    <p class="card-text oe_kanban_total_cost"><strong>Due Fee:</strong> <field name="total_cost"/></p>
                                    <p class="card-text oe_kanban_total_cost"><strong>Due Date:</strong> <field name="due_date"/></p>
                                </div>
                                <div class="card-body ">
                                    <p class="card-text"><strong>Faculty:</strong> <field name="accepted_faculty"/></p>
                                    <p class="card-text"><strong>Department:</strong> <field name="accepted_department"/></p>
                                </div>
                            </div> -->

                            <div class="card-body " style="margin:0; padding-left:1; padding-right:1; padding-top:1px; padding-bottom:0; background-color: #e0e0e0; ">
                                <p class="card-text" style="margin-bottom:0; padding:0; color: #007bff;"><strong>Department:</strong> <field name="accepted_department"/></p>
                                <p class="card-text" style="margin-bottom:0; padding:0; color: #e91e63;"><strong>Due:</strong> <field name="total_cost"/><span>tk</span></p>
                            </div>

                            <div class="card-footer text-muted " style="margin:0; padding-left:1; padding-right:1; padding-top:1px; padding-bottom:0;">
                                <p class="card-text" style="margin-bottom:0; padding:0; color: #36013F;"><strong>Email:</strong> <field name="email"/></p>
                                <p class="card-text" style="margin-bottom:0; padding:0; color:#7E354D;"><strong>Contact:</strong> <field name="contact_number"/></p>
                            </div>
           




                        </div>


                        </div>
                    </t>
            
            
                </templates>

            
            
            </kanban>

        </field>
    </record>









    <!-- form view -->
    <record id="um_student_info_form_view_record_id" model="ir.ui.view">
        <field name="name">student.registration.form</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <form>

               <header>
                    <button string="Create Invoice" type="object"  name="create_invoice" context="{'active_id': active_id}" 
                    class="oe_highlight" attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}" /> 
                    
                    <!-- <button string="Report" type="object"  name="confirm_report" class="oe_highlight"/>  -->

               </header>

                <sheet>
                    <group>
                        <group col="4" >
                            <field name="name" placeholder="Sunny Deol" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="age" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="student_id" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="registration_id" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>  
                            <field name="gender" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="birth_date" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                        </group>
                        <group>
                            <field name="image"/>
                            <field name="email" placeholder="example@gmail.com" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="contact_number" placeholder="01XXXXXX" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="english_proficiency" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="course_cost" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                            <field name="invoice_status" invisible='1'/>
                            <field name="admission_date" readonly='1' style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                        </group>
                    </group>


                    <notebook>
                        
                        <page string="Address">
                                <group>
                                    <group>
                                        <field name="emergency_contact" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                                        <field name="nid" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                                        <field name="address" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>                                    
                                    </group>
                                    
                                    <group>
                                        <field name="religion" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                                        <field name="nationality" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                                        <field name="home_city" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                                    </group>
                                

                                </group>
                        </page>


                        <page string="Family Information">
                            <group>
                                <group string="Father Information">
                                    <field name="father_name"/>
                                    <field name="father_occupation"/>
                                    <field name="currency_id" invisible='1'/>
                                    <field name="father_salary"/>
                                </group>
                                <group string="Mother Information">
                                    <field name="mother_name"/>
                                    <field name="mother_occupation"/>
                                    <field name="mother_salary"/>
                                </group>
                            </group>
                            <group>
                                <group string="Guardian Information">
                                    <field name="guardian_name"/>
                                    <field name="guardian_relation"/>
                                    <field name="guardian_contact"/>
                                </group>
                                <group string="Other Information">
                                    <field name="total_salary"/>
                                    <field name="home_contact"/>
                                    <field name="f_email"/>
                                </group>
                            </group>
                        </page>


                        <page string="Academic Information">

                            <!-- <header>  
                                <button string="Submit Academic Result" type="object" name="possible_department_according_to_grade" class="oe_highlight"/>
                            </header> -->

                            
                            <group>
                                <group string="HSC Board Result">
                                    <field name="hsc_result"/>        
                                    <field name="hsc_group"/>
                                </group>
                                
                                <group string="SSC Board Result">
                                    <field name="ssc_result"/>        
                                    <field name="ssc_group"/>
                                </group>

                            </group>
                                         

                            <group>

                                <group string="HSC Subject Result">
                                    <field name="hsc_math_grade" attrs="{'readonly':[('hsc_group', '!=', 'science')]}"/>
                                    <field name="hsc_physics_grade" attrs="{'readonly':[('hsc_group', '!=', 'science')]}"/>
                                    <field name="hsc_chemisty_grade" attrs="{'readonly':[('hsc_group', '!=', 'science')]}"/>
                                    <field name="hsc_biology_grade" attrs="{'readonly':[('hsc_group', '!=', 'science')]}"/>
                                    <field name="hsc_english_grade" />
                                    <field name="hsc_finance_grade" attrs="{'readonly':[('hsc_group', '!=', 'commerce')]}"/>
                                    <field name="hsc_accounting_grade" attrs="{'readonly':[('hsc_group', '!=', 'commerce')]}"/>
                                </group>
                                <group string="SSC Subject Result">
                                    <field name="ssc_math_grade" attrs="{'readonly':[('ssc_group', '!=', 'science')]}"/>
                                    <field name="ssc_physics_grade" attrs="{'readonly':[('ssc_group', '!=', 'science')]}"/>
                                    <field name="ssc_chemisty_grade" attrs="{'readonly':[('ssc_group', '!=', 'science')]}"/>
                                    <field name="ssc_biology_grade" attrs="{'readonly':[('ssc_group', '!=', 'science')]}"/>
                                    <field name="ssc_english_grade" />
                                    <field name="ssc_finance_grade" attrs="{'readonly':[('ssc_group', '!=', 'commerce')]}"/>
                                    <field name="ssc_accounting_grade" attrs="{'readonly':[('ssc_group', '!=', 'commerce')]}"/>
                                </group>
                            </group>
                            <group string="Previous Institute">
                                <group>
                                    <field name="collage_name" />
                                </group>
                                <group>
                                    <field name="school_name" />
                                </group>
                            </group>


                        </page>





                        <page string="Social Platform">
                            <group>
                                <field name="linkedin_id"/>
                                <field name="meta_id"/>
                                <field name="codeforce_id"/>
                                <field name="leetcode_id"/>
                                <field name="instagram_id"/>
                            </group>
                        
                        </page>


                        <page string="Department Select">
                            <group>
                                <field name="faculty_name" placeholder="select your desired faculty" widget="selection"/>
                                
                                <!-- <field name="select_department" widget="selection" options="{'no_create':True}"/> -->

                            </group>
                            
                        <!-- different group seceltion field -->
                            <!-- <group col="3" string="Department List"> 
                                    <group>   
                                        <field name="engineering_departments" placeholder="select department" widget="selection" options="{'no_create':True}" attrs="{'readonly':[('faculty_name', '!=', 'engineering')]}"/>
                                    </group>

                                    <group>
                                        <field name="business_departments" placeholder="select department" widget="selection" options="{'no_create':True}" attrs="{'readonly':[('faculty_name', '!=', 'business')]}"/>
                                    </group>

                                    <group>
                                        <field name="arts_departments" placeholder="select department" widget="selection" options="{'no_create':True}" attrs="{'readonly':[('faculty_name', '!=', 'arts')]}"/>
                                    </group>
                             
                            </group> -->

                            <group string="Department List"> 
                               
                                <field name="engineering_departments"  widget="selection" options="{'no_create':True}" attrs="{'invisible':[('faculty_name', '!=', 'engineering')]}"/>
                                <field name="business_departments"  widget="selection" options="{'no_create':True}" attrs="{'invisible':[('faculty_name', '!=', 'business')]}"/>
                                <field name="arts_departments" widget="selection" options="{'no_create':True}" attrs="{'invisible':[('faculty_name', '!=', 'arts')]}"/>
                            </group>

                            <group string="Congress!! Your are Selected" attrs="{'invisible':[('congres_group', '==', 'not_confirm')]}">
                                <group> 
                                    <field name="accepted_faculty" string="Your Faculty"/>
                                    <field name="is_admitted" invisible="1"/>
                                </group>

                                <group>
                                    <field name="accepted_department" string="Your Department"/>
                                    <field name="congres_group" invisible="1"/>
                                </group>

                            </group>


                            <separator></separator>

                            <group col="3">
                                <group> 
                                    <button string="Select Department" type="object" name="department_check_according_to_grade" class="oe_highlight"/>
                                </group>
                                <group attrs="{'invisible':[('congres_group', '==', 'not_confirm')]}"> 
                                    <button string="Confirm Department" type="object" name="confirm_department_registration" class="oe_highlight"/>
                                </group>
                                <group attrs="{'invisible':[('is_admitted', '==', False)]}"> 
                                    <button string="Course Select" type="object" name="open_course_selection_wizard_form" class="oe_highlight"/>
                                </group>
                            </group>
                            

                            
                            <!-- <button string="show" type="object" name="show_data" class="oe_highlight"/> -->

                        
                        </page>



                    </notebook>

                </sheet>
            
         

            </form>
        </field>
    </record>






    <!-- Action to open the tree view -->
    <record id="um_student_registration_view_record_idss" model="ir.actions.act_window">
        <field name="name">student registration view</field>
        <field name="res_model">student.registration</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- <menuitem id="um_student_registration_menus_id" name="student registration" action="um_student_registration_view_record_idss"/> -->


</odoo>
