<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- tree view          -->
    <record id="um_engineering_faculty_view_record" model="ir.ui.view">
        <field name="name">engineering.faculty.tree</field>
        <field name="model">engineering.faculty</field>
        <field name="arch" type="xml">
            <tree> 
                <field name="department_name" decoration-success="1==1"/>      
                <field name="available_seats" decoration-primary="1==1"/>      
                <field name="total_students" decoration-warning="1==1"/>      
                <field name="hsc_min_grade" decoration-info="1==1"/>
                <field name="ssc_min_grade" decoration-primary="1==1"/>      
                <field name="hsc_math_min_grade"/>      
                <field name="hsc_physics_min_grade" decoration-success="1==1"/>      
                <field name="hsc_chemisty_min_grade" decoration-primary="1==1"/>      
                <field name="hsc_biology_min_grade" decoration-warning="1==1"/>      
                <field name="hsc_english_min_grade" decoration-primary="1==1"/>
                <field name="ssc_math_min_grade" decoration-info="1==1"/>      
                <field name="ssc_physics_min_grade" decoration-success="1==1"/>      
                <field name="ssc_chemisty_min_grade" decoration-primary="1==1"/>      
                <field name="ssc_biology_min_grade" decoration-info="1==1"/>      
                <field name="ssc_english_min_grade" decoration-success="1==1"/>      
            </tree>
        </field>
    </record>   



    <!-- Action to open the tree view -->
    <record id="um_engineering_faculty_tree_views" model="ir.actions.act_window">
        <field name="name">engineering.faculty.tree</field>
        <field name="res_model">engineering.faculty</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- <menuitem  id="faculty_engineering_info_menu" name="Engineering" action="um_engineering_faculty_tree_view"/> -->


</odoo>
