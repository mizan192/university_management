<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="um_student_account_transaction_view_record_id" model="ir.ui.view">
        <field name="name">account.transaction.record.search</field>
        <field name="model">account.transaction.record</field>
        <field name="arch" type="xml">
                <search>
                    <!-- searchable field  -->
                    <field name="s_name"  filter_domain="['|','|',('s_name', 'ilike', self),('s_id', 'ilike', self),('record_id', 'ilike', self)]"/>
                    <field name="s_id"/>
                    <field name="record_id"/>
            


                    <!-- filter  -->
                    <filter string="Amount Above 30000" name="amount_paid" domain="[('amount_paid', '>=', 30000)]"/>
                    
                    
                    <!-- group  -->
                    <group expand="0" string="Group By">
                        <filter name="group_by_s_name" string="Student Account History" domain="[]" context="{'group_by': 's_name'}"/>
                        <filter name="group_by_payment_date" string="Transaction Date" domain="[]" context="{'group_by': 'payment_date'}"/>
                        
                
                    </group>

               
            </search>
        </field>
    </record>



    <!-- tree view          -->
    <record id="um_student_transaction_record_view" model="ir.ui.view">
        <field name="name">account.transaction.record.tree</field>
        <field name="model">account.transaction.record</field>
        <field name="arch" type="xml">
            <tree> 
                <field name="s_name" decoration-success="1==1"/>      
                <field name="s_id" decoration-primary="1==1"/>         
                <field name="amount_paid" decoration-warning="1==1"/>         
                <field name="transaction_id" decoration-info="1==1"/>         
                <field name="record_id" decoration-primary="1==1"/>         
                <field name="payment_date" decoration-success="1==1"/>         
            </tree>
        </field>
    </record>   




    <record id="um_students_transasssction_records_idsss" model="ir.actions.act_window">
        <field name="name">account.transaction.record.tree</field>
        <field name="res_model">account.transaction.record</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- <menuitem id="um_students_accounts_transaction_rec_views_rec" name="Transaction Record" action="um_students_transasssction_records_idsss"/> -->

</odoo>