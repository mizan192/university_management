<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- tree view          -->
    <record id="um_students_profile_view_record" model="ir.ui.view">
        <field name="name">student.profile.tree</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <tree> 
                <field name="name"/>      
                <field name="student_id"/>  
                <field name="accepted_faculty"/>  
                <field name="accepted_department"/>  
                <field name="course_cost"/>  
                <field name="total_fee" string='Total Fee'/>  
            </tree>
        </field>
    </record>   



    <!-- Action to open the tree view -->
    <record id="um_students_profile_tree_view" model="ir.actions.act_window">
        <field name="name">student.profile.tree</field>
        <field name="res_model">student.profile</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- <menuitem  id="student_profile_info_menu" name="student profile" action="um_students_profile_tree_view"/> -->


</odoo>
