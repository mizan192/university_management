<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- tree view          -->
    <record id="um_business_faculty_view_record" model="ir.ui.view">
        <field name="name">business.faculty.tree</field>
        <field name="model">business.faculty</field>
        <field name="arch" type="xml">
            <tree> 
                <field name="department_name" decoration-success="1==1"/>      
                <field name="available_seats" decoration-primary="1==1"/>   
                <field name="total_students" decoration-info="1==1"/>         
                <field name="hsc_min_grade" decoration-success="1==1"/>
                <field name="ssc_min_grade" decoration-primary="1==1"/>      
                <field name="hsc_finance_min_grade" decoration-info="1==1"/>      
                <field name="hsc_accounting_min_grade"/>         
                <field name="hsc_english_min_grade" decoration-success="1==1"/>
                <field name="ssc_english_min_grade" decoration-primary="1==1"/>      
                <field name="ssc_finance_min_grade" decoration-info="1==1"/>      
                <field name="ssc_accounting_min_grade" decoration-success="1==1"/>      
            </tree>
        </field>
    </record>   



    <!-- Action to open the tree view -->
    <record id="um_business_faculty_tree_views" model="ir.actions.act_window">
        <field name="name">business.faculty.tree</field>
        <field name="res_model">business.faculty</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- <menuitem  id="faculty_business_info_menu" name="Business" action="um_business_faculty_tree_view"/> -->

</odoo>
