<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- tree view          -->
    <record id="um_course_lists_view_record" model="ir.ui.view">
        <field name="name">course.list.tree</field>
        <field name="model">course.list</field>
        <field name="arch" type="xml">
            <tree> 
                <field name="course_name" decoration-success="1==1"/>      
                <field name="course_faculty" decoration-primary="1==1"/>      
                <field name="credit_hour" decoration-warning="1==1"/>      
                <field name="credit_hour_fee" decoration-danger="1==1" />      
                <field name="lab_fee" decoration-warning="1==1"/>      
                <field name="single_course_fee" decoration-info="1==1"/>      
            </tree>
        </field>
    </record>   

    <record id="um_course_lists_form_view_record" model="ir.ui.view">
        <field name="name">course.list.form</field>
        <field name="model">course.list</field>
        <field name="arch" type="xml">
            <form> 
                <sheet>
                    <group>
                        <field name="course_name" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>      
                        <field name="course_faculty" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>      
                        <field name="credit_hour" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>      
                        <field name="credit_hour_fee" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>      
                        <field name="lab_fee" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>      
                        <field name="single_course_fee" style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>  



    <!-- Action to open the tree view -->
    <record id="um_course_lists_view_recored_ids" model="ir.actions.act_window">
        <field name="name">course.list.view</field>
        <field name="res_model">course.list</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem  id="course_lists_info_menu" name="Courses" action="um_course_lists_view_recored_id"/> -->


















    

</odoo>
