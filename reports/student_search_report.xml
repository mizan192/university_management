<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <!-- student searching via admit date interval  -->
    <record id="search_student_admit_date_intervals" model="ir.ui.view">
        <field name="name">student.report.form</field>
        <field name="model">student.report</field>
        <field name="arch" type="xml">
           <form string='Students List Between Date Interval'>
                
            
                <sheet>
                    <div class="row justify-content-center">
                        <div class="col-md-6 ">
                            <group>
                        
                                <field name='start_date' style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>
                                <field name='end_date' style="font-size: 14px; color: #336699; background-color: #f0f0f0;"/>


                            </group>

                            
                                <button string="Save" type="object" class="oe_highlight" name="search_student_via_admit_date"/>
                                <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                         
                        </div>
                       
                 </div>
                
                </sheet>
           
             
 
            </form> 
        </field>
    </record>
    
    <record id="um_students_report_actions_id" model="ir.actions.act_window">
        <field name="name">student.report.form</field>
        <field name="res_model">student.report</field>
        <field name="view_mode">form</field>
    </record>

    

    <!-- report template for date interval student list  -->

    <record id="action_report_students_search_date_view" model="ir.actions.report">
        <field name="name">Student Summary</field>
        <field name="model">student.report</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">university_management.report_student_date_wise_search_view</field>
        <field name="report_file">university_management.report_student_date_wise_search_view</field>
        <field name="print_report_name">'Student List From %s to %s Date Interval' % (object.start_date) %(object.end_date)</field>
        <field name="binding_model_id" ref="university_management.model_student_report"/>
        <field name="binding_type">report</field>
    </record>

       

    <template id="report_student_date_wise_search_view">
        <t t-call="web.html_container">
          <t t-call="web.external_layout">
                       
                    <div class='row text-center'>
                        <h2>Student List Summary</h2> 
                   </div> 
    
                   
                   <table class="table table-sm">
                        <tr>
                            <th>Name</th>
                            <th>ID</th>
                            <th>Department</th>
                        </tr>

                        <tr t-foreach="docs" t-as="doc">
                            <!-- <td t-esc="doc.name.name" /> -->
                            <!-- <td t-esc="doc.student.registration.name" /> -->
                            <!-- <td t-esc="doc.accepted_department" /> -->

                            <!-- <td t-esc="doc[0]" />
                            <td t-esc="doc[1]" />
                            <td t-esc="doc[2]" /> -->

                        </tr>

                   </table>
                   


                        






            </t>
        </t>
    </template>







</odoo>